
<!DOCTYPE html>
<html lang="en"> 
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VC Timemangement System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootswatch.min.css" />
    <script src="https://kit.fontawesome.com/5d521bc7a2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/PROG2BPOE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  bg-primary border-bottom box-shadow mb-3" data-bs-theme="dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">VC Time Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item  text-light">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ModulePage">Modules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SemesterPage">Semester</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="TimetableLink" asp-area="" asp-page="/TimeTable">TimeTable</a>
                        </li>
                    </ul>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Register">Register</a>
                            </li>
                            @* @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

                            @{
                                if (HttpContextAccessor.HttpContext.Session.GetString("UserId") != null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark">Logout</a>
                                    </li>
                                }
                            } *@
                    </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light footer text-muted">
        <div class="container">
            &copy; 2023 - Varsity College
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>